{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./ts",
    "outDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,      
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}